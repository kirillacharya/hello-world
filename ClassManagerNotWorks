
#include "TXLib.h"

//-----------------------------------------------------------------------------

class CBall
    {
    double x, y;
    double vx, vy;

    int number;

    public:

    int r;
    int rNew;

    int bounce;

    COLORREF SFcolor;
    COLORREF Scolor;

    CBall ();

    void DrawBall ();
    void BallPhysics ( double dt, int TableX1, int TableY1, int randX, int randY );
    };

//-----------------------------------------------------------------------------

class CManager
    {
    public:

    void MainCycle ( CBall Array[], int Size, int TopNum, int TableX1, int TableY1, int randX, int randY );

    private:

    int MomentSize;

    void PrintBallArray ( CBall Array[], int TableX1, int TopNum );
    void AllBallsDraw ( CBall Array[], int size );
    void AllBallsPhysics ( CBall Array[], int size, double dt, int TableX1, int TableY1, int randX, int randY );
    void BounceCounter ( CBall Array[], int TableX1, int TopNum );
    void Selection ( CBall Array[], int size );
    int Searcher ( CBall Array[], int size, int min, int i );
    void Swapper ( CBall Array[], int a, int b );
    void PrintBallArray ( CBall Array[], int size, int TableX1, int TopNum );
    void SizePlus ( int MomentSize );
    void SizeMinus ( int MomentSize );
    };

//-----------------------------------------------------------------------------

void Title ( int X1, int Y1, int X2, int Y2, COLORREF Tcolor );

//-----------------------------------------------------------------------------

int main()
    {
    txCreateWindow ( 1300, 700 );

    const int Size = 100;
    int TopNum = 5;
    int MomentSize = 10;

    CManager M1;


    int TableX1 = 85*txGetExtentX()/100, TableY1 = txGetExtentY()/(TopNum + 1);
    int randX = txGetExtentX() - TableX1, randY = txGetExtentY();

    M1.MainCycle ( Array, Size, TopNum, TableX1, TableY1, randX, randY );

    return 0;
    }

//-----------------------------------------------------------------------------

CBall::CBall ():

    bounce (0),

    SFcolor ( RGB ( rand() % 255 + 100, rand() % 255, rand() % 255 ) ),

    Scolor ( SFcolor ),

    x ( rand() % 85*txGetExtentX() / 100 ),
    y ( rand() %    txGetExtentY() + 100 ),

    vx ( rand() % 1000 ),
    vy ( rand() % 1000 ),

    r ( rand() % 30 ),
    rNew  (r)
    {}

//-----------------------------------------------------------------------------

CManager::CManager ():
    Array ({})
    {}

//-----------------------------------------------------------------------------

void CBall::DrawBall ()
    {
    txSetColor ( Scolor, 3 );
    txSetFillColor ( SFcolor );

    txCircle ( x, y, rNew );
    }

//-----------------------------------------------------------------------------

void CManager::AllBallsDraw ( CBall Array[], int MomentSize )
    {
    for ( int i = 0; i < MomentSize; i++ )
        Array[i].DrawBall();
    }

//-----------------------------------------------------------------------------

void CBall::BallPhysics ( double dt, int TableX1, int TableY1, int randX, int randY )
    {
    x = x + vx * dt;
    y = y + vy * dt;

    if ( x >= TableX1 - rNew )
        {
        x = TableX1 - rNew;

        vx = -vx;

        //bounce++;
        }

    if ( y <= TableY1 + rNew )
        {
        y = TableY1 + rNew;

        vy = -vy;

        //bounce++;
        }

    if ( x <= rNew )
        {
        x = rNew;

        vx = -vx;

        //bounce++;
        }

    if ( y >= txGetExtentY() - rNew )
        {
        y = txGetExtentY() - rNew;

        vy = -vy;

        //bounce++;
        }

    if ( txGetPixel ( x, y ) == RGB (1, 1, 1) )
        {
        x = rand() % randX, y = rand() % randY;
        bounce++;
        }
    }

//-----------------------------------------------------------------------------

void CManager::AllBallsPhysics ( CBall Array[], int MomentSize, double dt, int TableX1, int TableY1, int randX, int randY )
    {
    for ( int i = 0; i < MomentSize; i++ )
        Array[i].BallPhysics( dt, TableX1, TableY1, randX, randY );
    }

//-----------------------------------------------------------------------------

void CManager::BounceCounter ( CBall Array[], int TableX1, int TopNum )
    {
    PrintBallArray ( Array, TableX1, TopNum );
    }

//-----------------------------------------------------------------------------

void CManager::Selection ( CBall Array[], int MomentSize )
    {
    int interval = 0;

    while ( interval < MomentSize )
        {
        int min = 0 + interval;
        int i   = 1 + interval;

        Swapper ( Array, interval, Searcher ( Array, MomentSize, min, i ) );

        interval++;
        }

    }

//-----------------------------------------------------------------------------

int CManager::Searcher ( CBall Array[], int MomentSize, int min, int i )
    {
    while ( i < MomentSize )
        {
        if ( Array[i].bounce > Array[min].bounce ) min = i;
        i++;
        }

    return min;
    }

//-----------------------------------------------------------------------------

void CManager::Swapper ( CBall Array[], int a, int b )
    {
    CBall agent = Array[a];
    Array[a] = Array[b];
    Array[b] = agent;
    }

//-----------------------------------------------------------------------------

void CManager::PrintBallArray ( CBall Array[], int TableX1, int TopNum )
    {
    txSetColor ( TX_BLACK, 5 );

    txSelectFont ("Times New Roman", txGetExtentY()/(TopNum + 1)*1/3);
    txDrawText ((txGetExtentX() - TableX1)/2 + TableX1, 0, txGetExtentX(), txGetExtentY()/(TopNum + 1), "Score");


    txSelectFont ("Times New Roman", txGetExtentY()/(TopNum + 1)*3/3);
    txLine( TableX1, 0, TableX1, txGetExtentY() );
    txLine( (txGetExtentX() - TableX1)/2 + TableX1, 0, (txGetExtentX() - TableX1)/2 + TableX1, txGetExtentY() );

    txDrawText (TableX1, 0, (txGetExtentX() - TableX1)/2 + TableX1, txGetExtentY()/(TopNum + 1), "#");

    if ( txMouseX() >= TableX1 && txMouseX() <= txGetExtentX() )
        {
        COLORREF colorOn = TX_LIGHTCYAN;

        int help = 1;
        while ( help < TopNum + 1 )
            {
            if (txMouseY() >= help*txGetExtentY()/(TopNum + 1) && txMouseY() <= (help + 1)*txGetExtentY()/(TopNum + 1) )
                {
                if ( txMouseButtons() == 1 )  Array[help - 1].rNew = 70;

                txSetFillColor ( colorOn );
                txRectangle (TableX1, help*txGetExtentY()/(TopNum + 1), txGetExtentX(), (help + 1)*txGetExtentY()/(TopNum + 1) );

                Array[help - 1].SFcolor = colorOn;
                }

            else
                {
                Array[help - 1].SFcolor = Array[help - 1].Scolor;
                Array[help - 1].rNew = Array[help - 1].r;
                }

            help++;
            }
        }

    for ( int i = 0; i < TopNum; i++)
        {
        char bounceStr[6] = "";
        char Number[6] = "";

        itoa ( Array[i].bounce, bounceStr, 10 );
        itoa ( i + 1, Number, 10 );

        txSetColor ( TX_BLACK, 5 );

        txLine (TableX1, txGetExtentY()/(TopNum + 1) * (i + 1), txGetExtentX(), txGetExtentY()/(TopNum + 1) * (i + 1) );

        txSetColor ( Array[i].Scolor, 2 );

        txDrawText ( TableX1, txGetExtentY()/(TopNum + 1) * (i + 1), (txGetExtentX() - TableX1)/2 + TableX1,
        txGetExtentY()/(TopNum + 1) * (i + 2), Number );

        txDrawText ( (txGetExtentX() - TableX1)/2 + TableX1, txGetExtentY()/(TopNum + 1) * (i + 1), txGetExtentX(),
        txGetExtentY()/(TopNum + 1) * (i + 2), bounceStr );
        }

    }

//-----------------------------------------------------------------------------

void Title ( int X1, int Y1, int X2, int Y2, COLORREF Tcolor )
    {
    txSetColor ( TX_BLACK, 5 );
    txLine ( X1, Y2, X2, Y2 );

    txSetColor ( Tcolor );
    txSelectFont ("Times New Roman", (Y2 - Y1)*3/4);
    txDrawText ( X1, Y1, X2, Y2, "POOL GAME" );
    }

//-----------------------------------------------------------------------------

void CManager::SizePlus ( int MomentSize )
    {
    MomentSize++;
    }

//-----------------------------------------------------------------------------

void CManager::SizeMinus ( int MomentSize )
    {
    MomentSize--;
    }

//-----------------------------------------------------------------------------

void CManager::MainCycle ( CBall Array[], int Size, int TopNum, int TableX1, int TableY1, int randX, int randY )
    {
    HDC pooltable = txLoadImage ("pooltableWithHoles.bmp");
    HDC Background = txLoadImage ("Background.bmp");

    while ( !GetAsyncKeyState(VK_ESCAPE) )
        {
        if ( GetAsyncKeyState ( VK_SPACE ) )  SizePlus ( MomentSize );
        if ( GetAsyncKeyState ( VK_BACK ) )  SizeMinus ( MomentSize );


        AllBallsDraw ( Array, Size );
        AllBallsPhysics ( Array, Size, 0.01, TableX1, TableY1, randX, randY );

        Selection ( Array, Size );
        BounceCounter ( Array, TableX1, TopNum );

        txSetFillColor ( TX_WHITE );
        txSleep(10);
        txClear();

        txBitBlt (txDC(), 0, 0, txGetExtentX(), txGetExtentY(), Background, 0, 0);
        txBitBlt (txDC(), 0, TableY1, txGetExtentX(), txGetExtentY(), pooltable, 0, 0);
        Title ( 0, 0, TableX1,  TableY1, RGB ( 0, 0, 255 ) );
        }

    txDeleteDC( pooltable );
    txDeleteDC( Background );
    }

//-----------------------------------------------------------------------------

void TextInst::Apply ( int x, int y, int r, COLORREF Color, COLORREF FillColor, int width, int LX, int UY,
                         int RX, int DY )
    {
    const char* Text = txInputBox ("Please write the text down below", "TEXT INSTRUMENT", "");

    txSetColor (Color);

    txSelectFont ("Arial", r);

    txTextOut ( x, y, Text );

    }

//-----------------------------------------------------------------------------

void PenInst::Apply ( int x, int y, int r, COLORREF Color, COLORREF FillColor, int width, int LX, int UY,
                         int RX, int DY )
    {
    txSetColor (COLOR);
    txSetFillColor (COLOR);

    width = r/6;

    printf("%d\n", R);

    txCircle ( txMouseX(), txMouseY(), width );
    }


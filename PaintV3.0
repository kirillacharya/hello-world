    {
    txSetFillColor ( TX_WHITE );

    txRectangle (x_, y_, SizeX_, SizeY_);
    }

//-----------------------------------------------------------------------------

int AbstractWindow::HitTest ()
    {
    int mx = txMouseX(), my = txMouseY();

    if ( x_ <= mx && mx <= x_ + SizeX_ && y_ <= my && my <= y_ + SizeY_ )
        {
        Status_ = BS_MOUSEOVER;

        if ( txMouseButtons() == 1)
            {
            Status_ = BS_PRESSED;
            onClick ();
            }
        }

    else Status_ = BS_NONE;

    }


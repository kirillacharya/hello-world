void Button::Draw ()
    {
    txSetFillColor (ButtonColor_);

    txSetColor (((Status_ == BS_MOUSEOVER) ? ButtonColor_ : RGB(0, 0, 0)), 2);

    txRectangle (x_, y_, x_ + SizeX_, y_ + SizeY_);

    txSelectFont ("Arial", SizeY_/3 );

    txDrawText (x_, y_, x_ + SizeX_, y_ + SizeY_, Text_);
    }


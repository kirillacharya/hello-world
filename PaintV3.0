    txSetColor ((Status_ == BS_MOUSEOVER) ? Color_ : FontColor_);

    txSelectFont ("Arial", SizeY_/3 );

    txDrawText (x_, y_, x_ + SizeX_, y_ + SizeY_, Text_);
    }


//----------------------------------------------------------------------------

void RPLUS (Button *b)
    {
    R++;
    }

void RMINUS (Button *b)
    {
    if (R >= 1) R--;
    else R = 1;
    }

//-----------------------------------------------------------------------------

void CurrColorFunc (Button *b)
    {
    (b->ButtonColor_) = COLOR;
    }

